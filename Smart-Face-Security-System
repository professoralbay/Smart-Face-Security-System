import cv2
import winsound
import time

# Yüz ve el tespiti için modelleri yükle
# Bu dosyalar, OpenCV ile birlikte gelir
face_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_frontalface_default.xml')
# El algılama için bir alternatif (daha güvenilir bir model)
hand_cascade = cv2.CascadeClassifier(cv2.data.haarcascades + 'haarcascade_hand.xml')

# Eğer el modeli bulunamazsa, yüz modelini kullanmaya devam et
if hand_cascade.empty():
    print("UYARI: haarcascade_hand.xml bulunamadi. Sadece yuz algilama calisacaktir.")
    hand_cascade = face_cascade

# Kamera akışını başlat
print("[BILGI] Kamera baslatiliyor...")
cap = cv2.VideoCapture(0)
time.sleep(2.0)

if not cap.isOpened():
    print("HATA: Kamera acilamadi.")
    exit()

last_alert_time = 0

print("[BILGI] Yuz ve el takibi basladi, cikmak icin 'q' tusuna basin.")

while True:
    ret, frame = cap.read()
    if not ret:
        break

    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
    
    # Yüzleri algıla
    faces = face_cascade.detectMultiScale(gray, scaleFactor=1.1, minNeighbors=5, minSize=(30, 30))
    
    # Elleri algıla
    hands = hand_cascade.detectMultiScale(gray, scaleFactor=1.1, minNeighbors=5, minSize=(50, 50))

    # Algılanan eller varsa ses çal
    if len(hands) > 0:
        current_time = time.time()
        # Sesleri 2 saniyede bir çal
        if current_time - last_alert_time > 2:
            winsound.Beep(800, 300)
            last_alert_time = current_time

    # Yüzler için yeşil kutu çiz
    for (x, y, w, h) in faces:
        cv2.rectangle(frame, (x, y), (x+w, y+h), (0, 255, 0), 2)
        cv2.putText(frame, "YUZ", (x, y - 10), cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0, 255, 0), 2)

    # Eller için kırmızı kutu çiz
    for (x, y, w, h) in hands:
        # Yüz kutusu içinde kalan elleri filtrele (opsiyonel)
        is_face = False
        for (fx, fy, fw, fh) in faces:
            if x > fx and y > fy and x+w < fx+fw and y+h < fy+fh:
                is_face = True
                break
        
        if not is_face:
            cv2.rectangle(frame, (x, y), (x+w, y+h), (0, 0, 255), 2)
            cv2.putText(frame, "TEHLIKELI", (x, y - 10), cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0, 0, 255), 2)

    cv2.imshow("Guvenlik Takibi", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
